{% extends 'base2.html.twig' %}

{% block title %}Gestion des réponses{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 200px;">
        <h1 class="text-center">Gestion des réponses</h1>
        {% if reponses is not empty %}
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Liste des réponses</h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table primary-table-bg-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Contenu</th>
                                                <th scope="col">Date</th>
                                            </tr>
                                        </thead>
                                        <tbody id="reponses-table-body">
                                            {% for reponse in reponses %}
                                                <tr>
                                                    <td>{{ reponse.idReponse }}</td>
                                                    <td>{{ reponse.contenuReponse|raw}}</td>
                                                    <td>{{ reponse.dateReponse|date('Y-m-d H:i:s') }}</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="alert alert-warning" role="alert">
                        Aucune réponse trouvée.
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
